# Blofin API Credentials
# Get these from: https://www.blofin.com/account/api-management

BLOFIN_API_KEY=your_api_key_here
BLOFIN_SECRET_KEY=your_secret_key_here
BLOFIN_PASSPHRASE=your_passphrase_here

# Trading Configuration
DEMO_MODE=true
MAX_LEVERAGE=50
DEFAULT_MARGIN_MODE=isolated

# Risk Management
MAX_POSITION_SIZE_PCT=0.05
MAX_DAILY_LOSS_PCT=0.10
DEFAULT_STOP_LOSS_PCT=0.02
DEFAULT_TAKE_PROFIT_PCT=0.06

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bubbybot_blofin.log
